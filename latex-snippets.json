{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"report": {
		"prefix": "report",
		"body": [
			"\\documentclass[${1:a4paper,10pt}]{${2:jsarticle}}",
			"",
			"",
			"% Formula",
			"\\usepackage{amsmath,amsfonts}",
			"\\usepackage{bm}",
			"\\numberwithin{equation}{section}",
			"% Image",
			"\\usepackage[dvipdfmx]{graphicx}",
			"\\usepackage[dvipdfmx]{color}",
			"\\usepackage{float}",
			"% Author affiliation",
			"\\usepackage{authblk}",
			"% Color",
			"\\usepackage{colortbl}",
			"% URL",
			"\\usepackage{url}",
			"${3}",
			"",
			"\\begin{document}",
			"",
			"\\title{${4}}",
			"\\author{${5}}",
			"\\affil{${6}}",
			"\\date{${7:\\today}}",
			"\\maketitle",
			"",
			"",
			"$0",
			"",
			"",
			"\\end{document}",
		],
		"description": "A template for reports written in Japanese"
	},

	"equation": {
		"prefix": "eq",
		"body": [
			"\\begin{equation}",
			"\t\\begin{split}",
			"\t\t${1}",
			"\t\\end{split}",
			"\\end{equation}",
		],
		"description": "Multi-line equations with only one eq. number"
	},

	"eq-align": {
		"prefix": "eq-align",
		"body": [
			"\\begin{align}",
			"\t\t${1}",
			"\\end{align}",
		],
		"description": "Multi-line equations with each eq. numbers"
	},
	
	"table": {
		"prefix": "ta",
		"body": [
			"\\begin{table}[htbp]",
			"\t\\centering",
			"\t\\caption{${1}}",
			"\t\\begin{tabular}{${2}}",
			"\t\t${3}",
			"\t\\end{tabular}",
			"\\end{table}",
		],
		"description": "A table with a"
	},

	"figure": {
		"prefix": "fi",
		"body": [
			"\\begin{figure}[htbp]",
			"\t\\centering",
			"\t\\includegraphics[scale = 1.0]{${1}}",
			"\t\\caption{${2}}",
			"\t\\label{fig:${3}}",
			"\\end{figure}",
		],
		"description": "A figure with a caption"
	},

	"enumerate": {
		"prefix": "enu",
		"body": [
			"\\begin{enumerate}",
			"\t\\item ${1}",
			"\\end{enumerate}",
		],
		"description": "Itemization with number"
	},

	"Itemization": {
		"prefix": "ite",
		"body": [
			"\\begin{itemize}",
			"\t\\item ${1}",
			"\\end{itemize}",
		],
		"description": "Itemization with bullet points"
	}
}